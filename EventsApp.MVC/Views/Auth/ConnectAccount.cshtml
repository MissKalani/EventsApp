@model EventsApp.MVC.ViewModels.HellViewModel
@{
    ViewBag.Title = "ConnectAccount";
}

<h2>Do you have an existing account?</h2>

@using (Html.BeginForm("ConnectExistingAccount", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()  
    <hr />
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.ConnectExistingAccountViewModel.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ConnectExistingAccountViewModel.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConnectExistingAccountViewModel.UserName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConnectExistingAccountViewModel.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConnectExistingAccountViewModel.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConnectExistingAccountViewModel.Password)
        </div>
    </div>
    <button type="submit" class="btn btn-default">Login</button>
}

@using (Html.BeginForm("ConnectNewAccount", "Auth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.ConnectNewAccountViewModel.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ConnectNewAccountViewModel.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConnectNewAccountViewModel.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConnectNewAccountViewModel.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConnectNewAccountViewModel.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConnectNewAccountViewModel.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>

}
